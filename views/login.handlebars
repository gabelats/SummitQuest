<body class="login-page">
  <div class="container">
    <div class="row justify-content-center align-items-center">
      <div class="col-md-6 text-center mb-5">
        <h2 class="heading-section">SummitQuest</h2>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-4">
        <div class="login-wrap p-0">
          <h3 class="mb-4 text-center">Sign In to Begin Your Quest</h3>
          <form action="#" class="signin-form" id="login-form">
            <div class="form-group">
              <input
                type="text"
                class="form-control"
                placeholder="Username"
                id="username-login"
                required
              />
            </div>
            <div class="form-group field-container">
              <input
                id="password-login"
                type="password"
                class="form-control"
                placeholder="Password"
                required
              />
              <span
                id="password-toggle-icon"
                toggle="#password-field"
                class="fa fa-fw fa-eye field-icon toggle-password"
              ></span>
            </div>
            <div class="form-group">
              <button
                id="submitButton"
                type="submit"
                class="form-control btn btn-primary submit px-3"
              >
                Sign In
              </button>
            </div>
          </form>
          <a href="/signup" style="color: #fff">Or Sign Up Here</a>
        </div>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script
    src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
  ></script>
  <script
    src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
  ></script>
  <script src="js/login.js"></script>
</body>