<div
  class="d-flex flex-row mt-2 container custom-border align-items-center bg-light"
>
  <div class="m-2 col-6">
    <h3>Peak Information</h3>
    <div class="image-container">
      <img class="img-fluid" src="{{peaks.peak_image_route}}" />
      <p class="overlay">{{peaks.peak_name}}</p>
    </div>
  </div>
  <div class="col-6 mt-2 mb-2 container">
    <ol class="">
      <li
        class="list-group-item d-flex justify-content-between align-items-center"
      >
        Location:
        {{peaks.location}}
      </li>
      <li
        class="list-group-item d-flex justify-content-between align-items-center"
      >
        Elevation:
        {{peaks.elevation}}
      </li>
      <li
        class="list-group-item d-flex justify-content-between align-items-center"
      >
        Difficulty:
        {{peaks.difficulty}}
      </li>
      <li
        class="list-group-item d-flex justify-content-between align-items-center"
      >
        Do you need a permit:
        {{#if featurePeaks.permit_required}}Yes
